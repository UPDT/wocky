apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: wocky-weekly
  namespace: wocky-us1
  labels:
    app: wocky-cron
    mod: weekly
    env: us1
spec:
  schedule: "0 0 * * 0"
  jobTemplate:
    spec:
      template:
        metadata:
          labels:
            app: wocky-weekly
            mod: weekly
            env: us1
          annotations:
            iam.amazonaws.com/role: <%= wocky_app_role_arn['value'] %>
        spec:
          restartPolicy: Never
          containers:
            - name: wocky
              image: 773488857071.dkr.ecr.us-west-2.amazonaws.com/hippware/wocky:<%= current_sha %>
              args: ["weekly"]
              envFrom:
                - configMapRef:
                    name: wocky-config
              env:
                - name: KUBE_POD_IP
                  valueFrom:
                    fieldRef:
                      fieldPath: status.podIP
                - name: KUBE_POD_NS
                  valueFrom:
                    fieldRef:
                      fieldPath: metadata.namespace
