---
apiVersion: v1
kind: Pod
metadata:
  name: wocky-predeploy-<%= deployment_id %>
  namespace: wocky-testing
  labels:
    app: wocky-predeploy
    env: testing
  annotations:
    iam.amazonaws.com/role: <%= wocky_app_role_arn['value'] %>
spec:
  restartPolicy: Never
  containers:
    - name: wocky
      image: 773488857071.dkr.ecr.us-west-2.amazonaws.com/hippware/wocky:<%= current_sha %>
      args: ["predeploy"]
      envFrom:
        - configMapRef:
            name: wocky-config
      env:
        - name: KUBE_POD_IP
          valueFrom:
            fieldRef:
              fieldPath: status.podIP
        - name: KUBE_POD_NS
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
